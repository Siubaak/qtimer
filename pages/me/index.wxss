.settings {
  padding: 0px 9px;
}

.settings .card {
  background: #FBFCFD;
  box-shadow: 0px 0px 20px 0px rgba(70, 126, 175, 0.15);
  border-radius: 16px;
  display: flex;
  align-content: space-between;
  align-items: center;
  padding: 16px;
  margin-bottom: 16px;
}

.settings .card-group {
  box-shadow: 0px 0px 20px 0px rgba(70, 126, 175, 0.15);
  border-radius: 16px;
  margin-bottom: 16px;
  overflow: hidden;
}

.settings .card-group .card-group-title {
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
  padding: 16px 16px 4px;
}

.settings .card-group .card {
  box-shadow: none;
  margin-bottom: auto;
  border-radius: 0;
}

.settings .card-group .card {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.settings .card .card-name {
  flex: 1;
  color: rgba(0, 0, 0, 0.9);
  font-size: 16px;
}

.settings .card .card-opr {
  width: 15px;
  height: 15px;
  transform: rotate(180deg);
  background-size: contain;
  background-image: url(data:image/svg+xml;base64,);
}