.container {
  background-color: #191919;
  padding: 0 48rpx;
}

.item {
  height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: 'Courier New', Courier, monospace;
  font-weight: bold;
  justify-content: center;
}

.item.down {
  justify-content: center;
}

.time {
  font-size: 196rpx;
  text-align: center;
  color: #eee;
}

.time.small {
  font-size: 156rpx;
}

.time.ready {
  color: #fa5151;
}

.time.start {
  color: #07c160;
}

.time.timing {
  color: #eaa000;
}

.scramble {
  font-size: 20px;
  line-height: 19px;
  text-align: center;
  color: #eee;
}

.scramble.small {
  font-size: 17px;
  line-height: 16px;
}

.scramble.hide {
  opacity: 0;
}