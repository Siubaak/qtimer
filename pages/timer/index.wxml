<wxs src="../../utils/format.wxs" module="format"></wxs>
<wxs src="./index.wxs" module="util"></wxs>
<view class="container" bindtouchstart="pressDown" bindtouchend="pressUp">
  <view class="item down">
    <text class="time {{timeClass}} {{util.getTimeSize(time)}}">
      {{format.time(time)}}
    </text>
  </view>
  <view class="item">
    <text class="scramble {{util.getScrambleClass(status)}} {{util.getScrambleSize(scramble.length)}}">
      {{scramble}}
    </text>
  </view>
</view>
<float-room wx:if="{{roomId}}"/>