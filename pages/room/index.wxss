.container {
  height: 100%;
	position: relative;
  background-color: #f7f8f8;
}

.message-container {
  height: calc(100% - 100px)
}

.message-item-container {
	overflow: hidden;
	display: flex;
	align-items: flex-start;
}

.message-area {
	margin-top: 10px;
	overflow: hidden;
	box-sizing: border-box;
}

.message-item {
	padding: 15px 15px 0;
	overflow: hidden;
}

.message-item-avatar {
	width: 42px;
	height: 42px;
	overflow: hidden;
	margin-right: 10px;
}

.message-item-avatar-image {
	width: 100%;
	height: 100%;
	border-radius: 4px;
}

.message-bd {
	flex: 1;	
	min-width: 0;
	color:#39454E;
	font-size: 16px;
	line-height: 1.4;
	overflow: hidden;
}

.message-content {
	display: inline-block;
	vertical-align: top;
	word-break: break-all;
	background: #fff;
	border-radius: 0 20px 20px;
	padding: 10px;
	text-align: left;
	max-width: 80%;
	vertical-align: middle;
}

.message-reply .message-item-container{
	flex-direction: row-reverse;
}

.message-reply .message-bd {
	text-align: right;
}

.message-reply .message-item-avatar {
	margin-right: 0;
	margin-left: 10px;
}

.message-reply .message-content {
	border-radius: 20px 0 20px 20px;
	background-color: #07c160;
	color: #fff;
}

.message-info {
	color:rgba(57, 69, 78, .5);
	padding: 10px 0;
	text-align: center;	
	font-size: 14px;
}

.message-info-text {
	display: inline-block;
	vertical-align: top;
	margin:0 auto;
	color: #fff;
	background-color: rgba(57, 69, 78, .2);
	font-size: 12px;
	height: 24px;
	line-height: 24px;
	padding: 0 10px;
	border-radius: 12px;
}

.message-bd .message-info {
	text-align: left;
}

.message-reply .message-bd .message-info {
	text-align: right;
}

.opr-btn {
	font-size: 16px;
	height: 34px;
	line-height: 34px;
	border-radius: 17px;
	padding: 0;
}

.opr-btn::after {
	display: none;
}

.tools-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	height: 50px;
	background-color: #f7f8f8;
	margin: 0;
	padding: 0;
  overflow: hidden;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

.tools-box {
	padding: 8px 10px;
	display: flex;
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
}

.tools-box .opr-btn {
  background-color: rgba(57, 69, 78, .2);
	margin-left: 5px;
  flex: 1;
}

.tools-box .opr-btn:first-child {
  margin-left: 0;
}

.reply-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 50px;
	height: 50px;
	background-color: #f7f8f8;
	margin: 0;
	padding: 0;
  overflow: hidden;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

.reply-box {
	padding: 8px 10px;
	display: flex;
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
}

.reply-box .opr-btn {
	background-color: #07c160;
	margin-left: 5px;
	width: 65px;
}

.reply-input-box {
	background-color: #fff;
	border-radius: 17px;
	padding: 0 10px;
	height: 34px;
	flex:1;
	box-shadow: 0 1px 6px 0 rgba(57, 69, 78, .06);
}

.reply-input {
	height: 25px;
	min-height: 25px;
	line-height: 25px;
	font-size: 14px;
	margin-top: 5px;
}

.reply-input-placeholder {
	color: rgba(57, 69, 78, .3);
}