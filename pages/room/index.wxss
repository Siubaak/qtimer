.container {
  height: 100%;
	position: relative;
  background-color: #f7f8f8;
}

.message-container {
  height: calc(100% - 100px - constant(safe-area-inset-bottom));
  height: calc(100% - 100px - env(safe-area-inset-bottom));
}

.message-container.finished {
  height: calc(100% - 50px - constant(safe-area-inset-bottom));
  height: calc(100% - 50px - env(safe-area-inset-bottom));
}

.message-item-container {
	overflow: hidden;
	display: flex;
	align-items: flex-start;
}

.message-area {
	margin-top: 10px;
	overflow: hidden;
	box-sizing: border-box;
}

.message-item {
	padding: 15px 15px 0;
	overflow: hidden;
}

.message-item-avatar {
	width: 42px;
	height: 42px;
	overflow: hidden;
	margin-right: 10px;
}

.message-item-avatar-image {
	width: 100%;
	height: 100%;
	border-radius: 4px;
	background-color: rgba(57, 69, 78, .3);
}

.message-bd {
	flex: 1;	
	min-width: 0;
	color:#39454E;
	font-size: 16px;
	line-height: 1.4;
	overflow: hidden;
}

.message-content {
	display: inline-block;
	vertical-align: top;
	word-break: break-all;
	background: #fff;
	border-radius: 20px;
	padding: 10px;
	text-align: left;
	max-width: 80%;
	vertical-align: middle;
}

.message-reply .message-item-container{
	flex-direction: row-reverse;
}

.message-reply .message-bd {
	text-align: right;
}

.message-reply .message-item-avatar {
	margin-right: 0;
	margin-left: 10px;
}

.message-reply .message-content {
	border-radius: 20px;
	background-color: #07c160;
	color: #fff;
}

.message-info {
	padding: 10px 0;
	text-align: center;
}

.message-info-text {
	display: inline-block;
	vertical-align: top;
	margin: 0 auto;
	color: #fff;
	background-color: rgba(57, 69, 78, .3);
	font-size: 14px;
	padding: 6px 10px;
	border-radius: 16px;
	text-align: left;
}

.message-info-avatar-image {
	float: left;
	width: 20px;
	height: 20px;
	overflow: hidden;
	margin-right: 4px;
	border-radius: 10px;
	background-color: rgba(57, 69, 78, .3);
}

.message-bd .message-info {
	text-align: left;
}

.message-reply .message-bd .message-info {
	text-align: right;
}

.opr-btn {
	font-size: 16px;
	height: 34px;
	line-height: 34px;
	border-radius: 17px;
	padding: 0;
}

.opr-btn::after {
	display: none;
}

.tools-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	height: 50px;
	background-color: #f7f8f8;
	margin: 0;
	padding: 0;
  overflow: hidden;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

.tools-box {
	padding: 8px 10px;
	display: flex;
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
}

.tools-box .opr-btn {
  background-color: rgba(57, 69, 78, .3);
	margin-left: 5px;
  flex: 1;
}

.tools-box .opr-btn:first-child {
  margin-left: 0;
}

.reply-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 50px;
	height: 50px;
	background-color: #f7f8f8;
	margin: 0;
	padding: 0;
  overflow: hidden;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

.reply-box {
	padding: 8px 10px;
	display: flex;
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
}

.reply-box .opr-btn {
	background-color: #07c160;
	margin-left: 5px;
	width: 65px;
}

.reply-input-box {
	background-color: #fff;
	border-radius: 17px;
	padding: 0 10px;
	height: 34px;
	flex:1;
	box-shadow: 0 1px 6px 0 rgba(57, 69, 78, .06);
}

.reply-input {
	height: 25px;
	min-height: 25px;
	line-height: 25px;
	font-size: 14px;
	margin-top: 5px;
}

.reply-input-placeholder {
	color: rgba(57, 69, 78, .3);
}

.result-area {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 50px;
	height: 500px;
	background-color: #f7f8f8;
	margin: 0;
	padding: 0;
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

.result-box {
	background-color: rgba(57, 69, 78, .3);
	position: absolute;
	top: 0;
	right: 10px;
	left: 10px;
	bottom: 0;
	border-radius: 16px;
	padding: 0 24px;
}

.result-item {
	color: #fff;
	font-size: 14px;
	padding-top: 24px;
	text-align: left;
}

.result-item-avatar-image {
	float: left;
	width: 20px;
	height: 20px;
	overflow: hidden;
	margin-right: 4px;
	border-radius: 10px;
	background-color: rgba(57, 69, 78, .3);
}

.result-item-info {
	padding-top: 6px;
}