.tab-bar {
  background-color: #FBFCFD;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 56px;
  z-index: 10;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-padding {
  background-color: #FBFCFD;
  height: 56px;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
 
.tab-bar .tab-item {
  background-color: #FBFCFD;
  flex: 1;
  text-align: center;
  color: #A0A0A0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.tab-bar .tab-item .tab-icon {
  height: 28px;
  width: 100%;
}

.tab-bar .tab-item .tab-text {
  line-height: 10px;
  font-size: 10px;
  margin-top: 6px;
  font-weight: 500;
}

.tab-item.selected {
  color: #467EAF;
}